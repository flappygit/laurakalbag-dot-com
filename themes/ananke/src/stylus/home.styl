// HOME

.home	
	.page 
		h2:nth-of-type(1)
			margin-bottom 0
			
		p
			padding $x-space
			
			@media screen and (min-width: $bigger-x-space)
				padding ($x-space*2)
			
			@media screen and (min-width: $bigger-horizontal-x-space)
				padding-top ($x-space*2)
				padding-left ($x-space*4)
				padding-bottom ($x-space*2)
				padding-right ($x-space*4)
			
		.entry-content
			border-bottom-style()
			overflow hidden
			
		.entry-content p
			margin-bottom 0

// Colour theme the Accessibility For Everyone and Better sections

.accessibilitybook-text, .accessibilitybook-text a
	color $a4etext

.better-text, .better-text a
	color $bettertext
	
// Layout the book cover and app icon images

.book-and-better
