// NAKED ELEMENTS

body
	margin 0

p, small
	max-width max-width
		
ul, ol
	margin 1em $layout-unit
	padding-left $layout-unit

blockquote
	margin 1em $layout-unit

pre
	-ms-word-break break-all
	word-break break-all
	word-break break-word
	border none
	margin 1em 0
	max-width (max-width)*1.195
	padding 2em $layout-unit

// CUSTOM COMPONENTS (CLASSES AND IDs)

// HEADER ////////////////////////////

.site-header
	// to clear contained margins
	padding 0.5em 0 0 0

.site-title
	margin-top 0
	margin-bottom 0.35em
	
	a
		text-decoration none

// MAIN ////////////////////////////

#content
	// to clear contained margins
	padding 0.5em 0 4.5em

// FOOTER ////////////////////////////
	
.site-footer
	// to clear contained margins
	padding 0.5em 0
		
.site-footer p, .site-footer small, .note, figcaption p
	margin-right $layout-unit
	margin-left $layout-unit