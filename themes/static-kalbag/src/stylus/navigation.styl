.skip-link
	display block
	padding 0.25em 1em
	position absolute
	right 0
	top -10em

.navigation-menu
	ul
		background rgba(0,0,0,0.2)
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content flex-start
		align-content stretch
		align-items stretch
		list-style-type none
		margin 0
		padding 0
		
		a
			display block
			padding ($layout-unit/2)
			text-decoration none
			
			@media screen and (min-width: 35em)
				padding 0.25em ($layout-unit/1.35)
				
		li:nth-of-type(1) a
			background rgba(0,0,0,0.5)
			
		li:nth-of-type(2) a
			background rgba(0,0,0,0.45)
			
		li:nth-of-type(3) a
			background rgba(0,0,0,0.4)
			
		li:nth-of-type(4) a
			background rgba(0,0,0,0.35)
			
		li:nth-of-type(5) a
			background rgba(0,0,0,0.3)
		
		li:nth-of-type(6) a
			background rgba(0,0,0,0.25)