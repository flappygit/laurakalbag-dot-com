// Plug colour variables into here

&
	background $secondary-bg
	color $text

a
	color $linktext

	&:hover, &:active
		color $linktext
		transition 0.2s

p a, p a:hover, ul a, ul a:hover, ol a, ol a:hover, figcaption a
	background-image linear-gradient(to top, alpha($primary-bg, 0) 0.02em, alpha($brilliant, .6) 0.03em, alpha($brilliant, .6) 0.13em, alpha($primary-bg, 0) 0.14em)
	text-decoration none

p a:hover, ul a:hover, ol a:hover, figcaption a:hover
	background-image linear-gradient(to top, alpha($primary-bg, 0) 0.01em, alpha($brilliant, .8) 0.02em, alpha($brilliant, .8) 0.13em, alpha($primary-bg, 0) 0.14em)
	color darken($brilliant, .2)

h1 a, h2 a, h3 a
	// remove gradient underline
	background none
	color $text

.site-title
	a
		background $secondary-bg
		color $text

.site-footer
	background $secondary-bg

hr
	border $brilliant dashed 0.1em
	margin 2em 0

// invert colours for code

pre
	background $text

	code
		color $primary-bg

.navigation-menu
	ul
		background alpha($tab-five, 0.1)
		li
			background $secondary-bg

.navigation-menu
	background alpha($tab-five, 0.1)

	// set active navigation link background colour
	li.active a
		background alpha($primary-bg, 0.5)
		color $text

&.blog
	// set active navigation link background colour
	.navigation-menu li a[href="/posts/"]
		background $primary-bg

// Mixin for colour highlighting and underlines for menu navigation
highlight-and-underline-on-interaction()
	position relative

	&:after
		box-sizing border-box
		border-bottom 0.15em alpha($text, 0.5) solid
		content ""
		display block
		height 0.15em
		margin-top -0.2em
		margin-bottom 0.05em
		position relative
		width auto
	
