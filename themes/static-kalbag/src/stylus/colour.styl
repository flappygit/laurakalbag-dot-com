// add colour behind elements so image doesnâ€™t make it hard to read
#content
	h1, h2, h3, h4, h5, h6, article p, article ul, article ol, article blockquote, .posts-list h3, .posts-list .entry-meta, .posts-list p
		background $primary-bg
		box-shadow $primary-bg 0 0 0 ($layout-unit)*0.8, alpha($primary-bg, 0.8) 0 0 0 ($layout-unit)*1
		
