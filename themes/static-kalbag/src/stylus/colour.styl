// Plug colour variables into here

body
	background $secondary-bg
	color $text

a, a:hover, a:visited, a:active
	color $text
	
.site-header
	background $secondary-bg

#content
	background $primary-bg
	
.site-footer
	background $secondary-bg
	
hr
	border $accent dashed 0.1em
	margin 2em 0
	
// invert colours for code

pre
	background $text
	
	code
		color $primary-bg

// give navigation links darker backgrounds that gradate to lightness
// take initial value, and darken by X
$darkened = lightness($accent, 60%)

.navigation-menu
	ul
		background alpha($darkened, 0.1)
		
.navigation-menu
	background alpha(lightness($accent, 90%), 0.1)
	
	// set active navigation link background colour
	li.active a
		background alpha($primary-bg, 0.5)
			
// links before and after active navigation (relies on order of navigation being reflected)
// darken text accordingly
body.home .navigation-menu a[href="/about-me/"],
body.about-me .navigation-menu a[href="/"],
body.about-me .navigation-menu a[href="/posts/"],
body.blog .navigation-menu a[href="/about-me/"],
body.blog .navigation-menu a[href="/projects/"],
